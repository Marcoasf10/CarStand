@model StandCarros.Models.Car

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem a certeza que quer eliminar o seguinte carro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco) €
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Combustível)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Combustível)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRegisto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRegisto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quilometros)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quilometros)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cilindrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cilindrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Potencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Potencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Caixa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Caixa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumMudancas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumMudancas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumPortas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumPortas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tracao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tracao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photos)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Photos.Any()) {
                <div>
                    @foreach (var photo in Model.Photos)
                    {
                    <div class="photo-container">
                        <img src="data:image/@photo.FileExtension;base64,@Convert.ToBase64String(photo.Bytes)" alt="@photo.Description" style="width: 100px; height: auto;" />
                        <br />
                    </div>
                    }
                </div>
            }
            else {
                <p>Sem fotos para mostrar</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
